model Product {
    id          Int      @id @default(autoincrement())
    seller      User     @relation("SellerProducts", fields: [seller_id], references: [id])
    seller_id   Int
    title       String
    description String
    price       Float
    category    Category @relation(fields: [category_id], references: [id])
    category_id Int
    created_at  DateTime @default(now())

    cartItems  CartItem[]
}
